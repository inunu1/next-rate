datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Player {
  id          String   @id @default(uuid())
  name        String   @unique
  initialRate Int
  currentRate Int
  createdAt   DateTime @default(now())
  deletedAt   DateTime? // ← 論理削除用フィールド
}

model Result {
  id          String   @id @default(uuid())
  winnerId    String
  winnerName  String
  winnerRate  Int
  loserId     String
  loserName   String
  loserRate   Int
  playedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
}